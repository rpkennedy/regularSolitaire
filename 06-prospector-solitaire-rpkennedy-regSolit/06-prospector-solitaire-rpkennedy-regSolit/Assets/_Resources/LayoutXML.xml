<xml>
	<!-- This file holds info for laying out the Prospector card game. -->
	
	<!-- The multiplier is multiplied by the x and y attributes below. -->
	<!-- This determines how loose or tight the layout is. --> 
	<multiplier x="1.25" y="1.5" />
	
	<!-- In the XML below, id is the number of the card -->
	<!-- x and y set position -->
	<!-- faceup is 1 if the card is face-up -->
	<!-- layer sets the depth layer so cards overlap properly -->
	<!-- hiddenby is the ids of cards that keep a card face-down -->
	
	<!-- Layer0, the top row. -->
	<slot id="0" x="-7.5"   y="1" faceup="1" layer="0"  />
	<slot id="1" x="-5"     y="1" faceup="0" layer="0" hiddenby="7" />
	<slot id="2" x="-2.5"   y="1" faceup="0" layer="0" hiddenby="8, 13" />
	<slot id="3" x="0"      y="1" faceup="0" layer="0" hiddenby="9, 14, 18" />
	<slot id="4" x="2.5"    y="1" faceup="0" layer="0" hiddenby="10, 15, 19, 22" />
	<slot id="5" x="5"      y="1" faceup="0" layer="0" hiddenby="11, 16, 20, 23, 25" />
	<slot id="6" x="7.5"    y="1" faceup="0" layer="0" hiddenby="12, 17, 21, 24, 26, 27" />
	
  
	<!-- Layer1, the next level. -->
	<slot id="7" x="-5"     y=".5" faceup="1" layer="1" />
	<slot id="8" x="-2.5"   y=".5" faceup="0" layer="1" hiddenby="13" />
	<slot id="9"  x="0"     y=".5" faceup="0" layer="1" hiddenby="14, 18" />
	<slot id="10" x="2.5"   y=".5" faceup="0" layer="1" hiddenby="15, 19, 22" />
	<slot id="11" x="5"     y=".5" faceup="0" layer="1" hiddenby="16, 20, 23, 25" />
	<slot id="12" x="7.5"   y=".5" faceup="0" layer="0" hiddenby="17, 21, 24, 26, 27" />
	
	
	<!-- Layer2, the next level. -->
	<slot id="13" x="-2.5"  y="0" faceup="1" layer="2"  />
	<slot id="14" x="0"     y="0" faceup="0" layer="2" hiddenby="18" />
	<slot id="15" x="2.5"   y="0" faceup="0" layer="2" hiddenby="19, 22" />
	<slot id="16" x="5"     y="0" faceup="0" layer="2" hiddenby="20, 23, 25" />
	<slot id="17" x="7.5"   y="0" faceup="0" layer="1" hiddenby="21, 24, 26, 27" />
	
	
	<!-- Layer3, the next level. -->
	<slot id="18" x="0"    y="-.5" faceup="1" layer="3" />
	<slot id="19" x="2.5"  y="-.5" faceup="0" layer="3" hiddenby="22" />
	<slot id="20" x="5"    y="-.5" faceup="0" layer="3" hiddenby="23, 25"/>
	<slot id="21" x="7.5"  y="-.5" faceup="0" layer="2" hiddenby="24, 26, 27"/>
  
  
  <!-- Layer4, the next level. -->
	<slot id="22" x="2.5"   y="-1" faceup="1" layer="4" />
	<slot id="23" x="5"     y="-1" faceup="0" layer="4" hiddenby="25"/>
	<slot id="24" x="7.5"   y="-1" faceup="0" layer="3" hiddenby="26, 27"/>
  
  
  <!-- Layer5, the next level. -->
	<slot id="25" x="5"  y="-1.5" faceup="1" layer="5" />
	<slot id="26" x="7.5"  y="-1.5" faceup="0" layer="4" hiddenby="27"/>
  
  
  <!-- Layer6, the last level. -->
	<slot id="27" x="7.5"  y="-2" faceup="1" layer="5" />
	
	<!-- This positions the draw pile and staggers it -->
	<slot type="drawpile" x="-6" y="5" xstagger="-0.145" layer="4"/>
	
	<!-- This positions the discard pile and target card -->
	<slot type="discardpile" x="-2.5" y="5" layer="5"/>
	
</xml>
	